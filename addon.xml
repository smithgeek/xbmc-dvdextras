<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.dvdextras"
       name="Dvd Extras"
       version="1.1.0"
       provider-name="smithgeek">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="xbmc.gui" version="4.0.0"/>
  </requires>
  <extension point="xbmc.python.script" library="DvdExtras.py" />
  <extension point="xbmc.python.library" library="DvdExtras.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Add DVD extras to your movies and TV shows.</summary>
    <description lang="en">Provides a way to add DVD extras to your video library. Look at the readme for setup instructions. https://github.com/brentosmith/xbmc-dvdextras</description>
    <platform>all</platform>
  </extension>
</addon>
